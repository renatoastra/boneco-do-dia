{
	"extends": "@gebra/tsconfig/nextjs.json",
	"compilerOptions": {
		"plugins": [{ "name": "next" }],
		"paths": {
			"@gebra/*": ["./modules/*"],
			"public/*": ["./public/*"],
			"@notification/*": ["./modules/notification/*"],
			"@auth/*": ["./modules/auth/*"],
			"@ui/*": ["./modules/ui/*"],
			"@shared/*": ["./modules/shared/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.cjs",
		"**/*.mjs",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
